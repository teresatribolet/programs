<p id="notice"><%= notice %></p>

<h1>Listing Boards</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>About</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><%= board.name %></td>
        <td><%= board.about %></td>
        <td><%= board.user.full_name %></td>
        <td><%= link_to 'Show', board,:class => "btn-success btn-sm" %></td>
        <td><%= link_to 'Edit', edit_board_path(board),:class => "btn-success btn-sm" %></td>
        <td><%= link_to 'Destroy', board,:class => "btn-success btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Board', new_board_path,:class => "btn-success btn-sm" %>
