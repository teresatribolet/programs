<p id="notice"><%= notice %></p>

<h1>Listing Pins</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>About</th>
      <th>User</th>
      <th>Board</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= pin.name %></td>
        <td><%= image_tag(pin.image_url, :width => 200) %></td>
        <td><%= pin.about %></td>
        <td><%= pin.user.full_name %></td>
        <td><%= pin.board.name %></td>
        <td><%= link_to 'Show', pin,:class => "btn-success btn-sm" %></td>
        <td><%= link_to 'Edit', edit_pin_path(pin),:class => "btn-success btn-sm" %></td>
        <td><%= link_to 'Destroy', pin,:class => "btn-success btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
