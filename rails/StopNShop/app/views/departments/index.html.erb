<p id="notice"><%= notice %></p>
<h1>Listing Departments</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.name %></td>
        <td><%= department.description %></td>

        <td><button class="btn btn-success"><%= link_to 'Show', department %></button></td>
        <td><button class="btn btn-success"><%= link_to 'Edit', edit_department_path(department) %></button></td>
        <td><button class="btn btn-success"><%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<button class="btn btn-success"><%= link_to 'New Department', new_department_path %></button>
