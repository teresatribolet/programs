<% current_user.blog_posts.each do |blog_post| %>
    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <%= link_to blog_post.title, blog_post %>
        </div>
        <div class="panel-body">
          by <%= blog_post.user.name %> on <%= blog_post.created_at.strftime('%m/%d/%Y %I:%M %p') %><br />
          <p><%= blog_post.blog_entry[0..5] %>...[<%= link_to 'Read More', blog_post %>]</p>
        </div>
        <div class="panel-footer">
          <%= link_to 'Edit', edit_blog_post_path(blog_post), class: "btn btn-edit" %>
          <%= link_to 'Destroy', blog_post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-delete" %>
        </div>
      </div>
    </div>
<% end %>
