<body class="blogcolor">
<h1>Current Blog Posts</h1>

<div class="row">
  <% @blog_posts.each do |blog_post| %>
    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <%= link_to blog_post.title, blog_post %>
        </div>
        <div class="panel-body">
          by <%= blog_post.author %> on <%= blog_post.created_at.strftime('%m/%d/%Y %I:%M %p') %><br />
          <p><%= blog_post.blog_entry[0..5] %>...[<%= link_to 'Read More', blog_post %>]</p>
        </div>
        <div class="panel-footer">
          <%= link_to 'Edit', edit_blog_post_path(blog_post), class: "btn btn-teal" %>
          <%= link_to 'Destroy', blog_post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </div>
      </div>
    </div>
<% end %>
</div>

<br>

<%= link_to 'New Blog post', new_blog_post_path,:class => "btn btn-success" %>
</body>